<resources>
    <!-- Base application theme. -->
    <style name="Theme.CountersNormal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSurface">@color/orange</item>
        <item name="colorOnSecondary">@color/gray</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="android:textColorTertiary">@color/light_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.CountersWelcome" parent="Theme.CountersNormal">
         <item name="android:windowBackground">@color/welcome_background</item>
    </style>

    <style name="Theme.GrayMediumTextView" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.GrayLargeTextView" parent="Theme.BoldTextView">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Theme.OrangeMediumTextView" parent="Theme.GrayMediumTextView">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="Theme.NormalBoldTextView" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.BoldTextView" parent="TextAppearance.AppCompat.Large">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="editTextTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/orange</item>
    </style>



</resources>